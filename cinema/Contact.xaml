<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="cinema.Contact"
             
             NavigationPage.HasNavigationBar="False"
              BackgroundColor="#302c2c"
             IconImageSource="pin.png"
             Title="Contact"
             >
    <ContentPage.Content>

        <StackLayout>

            <Image Source="mapicon.png" HeightRequest="380" Margin="0,20,0,0" />
            <Button x:Name="Test" Text="This is your way to us!" Clicked="Test_Clicked" BackgroundColor="#b82828" FontSize="15" HorizontalOptions="CenterAndExpand" CornerRadius="30" WidthRequest="400" TextColor="White"/>
            <BoxView BackgroundColor="#b82828" HeightRequest="10" />
            <Label Text="Contact:" FontSize="27" TextColor="#b82828"  />
            <Label Text="Address street 25" FontSize="15" TextColor="white"  />
            <Label Text="cineplanet@email.com" FontSize="15" TextColor="white" />
            <Label Text="056/484-222" FontSize="15" TextColor="white"  />
          
        </StackLayout>

    </ContentPage.Content>
</ContentPage>