             BackgroundColor="#302c2c"
             NavigationPage.HasNavigationBar="False">
            

    <StackLayout>
        <Label Text="CinePlanet" FontSize="50" TextColor="#b82828" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,50, 0 ,0"/>
